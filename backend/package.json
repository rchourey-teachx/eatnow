{
    "name": "food-delivery-backend",
    "version": "1.0.0",
    "description": "Food Delivery Backend with Kafka and Redis for real-time tracking",
    "main": "dist/index.js",
    "scripts": {
        "build": "tsc",
        "start": "node dist/index.js",
        "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
        "migrate": "ts-node src/database/migrate.ts",
        "seed": "ts-node src/database/seed.ts",
        "test": "jest",
        "test:unit": "jest --testPathPattern=tests/unit",
        "test:e2e": "jest --testPathPattern=tests/e2e --runInBand",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage"
    },
    "dependencies": {
        "express": "^4.18.2",
        "kafkajs": "^2.2.4",
        "ioredis": "^5.3.2",
        "pg": "^8.11.3",
        "uuid": "^9.0.0",
        "dotenv": "^16.3.1",
        "cors": "^2.8.5"
    },
    "devDependencies": {
        "@types/express": "^4.17.21",
        "@types/node": "^20.10.0",
        "@types/pg": "^8.10.9",
        "@types/uuid": "^9.0.7",
        "@types/cors": "^2.8.17",
        "@types/jest": "^29.5.11",
        "@types/supertest": "^2.0.16",
        "jest": "^29.7.0",
        "ts-jest": "^29.1.1",
        "supertest": "^6.3.3",
        "typescript": "^5.3.2",
        "ts-node": "^10.9.2",
        "ts-node-dev": "^2.0.0"
    }
}
